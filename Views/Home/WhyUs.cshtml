@{
    ViewBag.Title = "WhyUs";
}

<div id="carouselExampleFade" class="carousel slide carousel-fade  topcarousel" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/images/whyus/Banner1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/whyus/Banner2.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/images/whyus/Banner3.png" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
            data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="text-center">
    <a href="@Url.Action("Index","Home")">
        <img class="logo" src="~/Content/images/commonimages/Logo.png" alt="...">
    </a>
    <div class="logotext">
        <a id="grandtext" href="@Url.Action("Index","Home")">Grand</a>
        <a id="bluetext" href="@Url.Action("Index","Home")">Blue</a>
        <div id="resorttext">
            <p><a id="subtext" href="@Url.Action("Index","Home")">Resort & Spa</a></p>
        </div>
    </div>
</div>
<div class="aboutblock commonblock">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="whyus">
                    <h2 class="whyusblock">
                        GrandBlue Resort & Spa
                    </h2>
                    <p class="whyusblocktext">
                        is the one & only five star resort in the Chittagong region of Bangladesh. Equipped
                        with
                        all modern
                        state of the
                        art amenities and facilities, located in Cox's Bazar (the sea capital of
                        Bangladesh),
                        around eight hours
                        drive
                        from Dhaka. This resort is the true combination of ultimate luxury, gracious
                        hospitality
                        and admirable
                        bluish.
                    </p>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="whyusblocksubtext1">
                    This picture-perfect five-star resort blends its charm with warm-hearted Bangladeshi
                    service. Relax on mattress-thick sun loungers on Bangladesh’s most beautiful beach, soak
                    in
                    three sparkling pools edged with bougainvilleas, stroll along immaculate lawns and taste
                    the
                    best Bangladeshi and international cuisine at our four restaurants.
                </p>
                <p class="whyusblocksubtext2">
                    Whether in the spa,
                    at
                    the recreation and fitness centre, taking part in water sports, tennis, watching movies,
                    hanging out at the kids club, or just relaxing with a cocktail and a good book, at The
                    GrandBlue there are ample ways to enjoy the serene magic of a tropical getaway.
                </p>

                <h2 style="font-family: 'Philosopher', sans-serif;">
                    Awards:
                </h2>
            </div>

        </div>

    </div>
    <div class="text-center">
        <img src="~/Content/images/whyus/award.png" width="200px" alt="">
        <img src="~/Content/images/whyus/award2.png" width="200px" alt="">
    </div>
</div>
