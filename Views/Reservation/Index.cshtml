                                                    </tr>
                                                </tbody>
                                                
                                                <div class="card-footer">
                                                    
                                                    <script>
                                                        function passValuesOSV() {
                                                            var checkin = document.getElementById("checkin").value;
                                                            var checkout = document.getElementById("checkout").value;
                                                            var room = "Ocean Side Villa";
                                                            localStorage.setItem("checkinTime", checkin);
                                                            localStorage.setItem("checkoutTime", checkout);
                                                            localStorage.setItem("roomType", room);
                                                        }
                                                    </script>
                                                    <a href="@Url.Action("Book", "Reservation")">
                                                        <button type="submit" value="click" onclick="passValuesOSV();" class="btn btn-secondary" style="float: right;">Book Room</button>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
