        <div class="main-content">
            <div class="content-date">
                <div class="container">
                    <div class="row justify-content-md-center">
                        <div class="col-md-8" style="background-color: black; opacity: 0.7; padding-top: 1em;">
                            <div class="container">
                                <form action="">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="txt">Check In</label>
                                                <div class="input-container">
                                                    <div class="input-group">
                                                        <input type="text" autocomplete="off" id="checkin" name="checkin" value="" placeholder="MM/DD/YYYY" class="form-control frmdd datepicker" required>
                                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="txt">Check Out</label>
                                                <div class="input-container">
                                                    <div class="input-group">
                                                        <input type="text" autocomplete="off" id="checkout" name="checkout" value="" placeholder="MM/DD/YYYY" class="form-control frmdd datepicker" required>
                                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row chck">
                                        <div class="col-lg-12">
                                            <button class="btn btn-success" style="float: right;">Check Availability</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
